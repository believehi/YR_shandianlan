.uni-rw-time {
	background-color: #FFFFFF;
	padding: 0 25rpx;
	width: 700rpx;
	margin-top: 15rpx;
}
.uni-rw-time .uni-rw-title {
	text-align: center;
	font-size: 32rpx;
	color: #0b0b0b;
	line-height: 80rpx;
	border-bottom: 1rpx solid #e6e6e6;
}
.uni-rw-ms {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 30rpx;
	padding: 25rpx 0;
}
.uni-rw-ms .uni-rw-sm {
	width: 154rpx;
	color: #212121;
}
.uni-rw-ms .uni-rw-m {
	-webkit-box-flex: 2;
	-webkit-flex-grow: 2;
	    -ms-flex-positive: 2;
	        flex-grow: 2;
	width: 565rpx;
	text-align: justify;
	color: #616161;
}
.uni-rw-yq {
	color: #f3571a;
}
.uni-rw-yq text:first-child {
	margin-right: 40rpx;
}
.uni-sj-wz {
	border-bottom: 1rpx solid #e6e6e6;
}
.uni-rw-m image {
	width: 267rpx;
	height: 178rpx;
	margin-top: 10rpx;
}
.uni-rw-m image:first-child {
	margin-right: 15rpx;
}
.uni-cz-bz text:first-child {
	margin-top: 25rpx;
}
.uni-cz-bz text {
	font-size: 30rpx;
	color: #616161;
	display: inline-block;
	margin-bottom: 25rpx;
}
.uni-time-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
}
.uni-time-item {
	font-size: 30rpx;
	color: #212121;
	width: 20%;
	-webkit-flex-wrap: nowrap;
	    -ms-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	text-align: center;
}
.uni-time-item text {
	display: inline-block;
	width: 100%;
	margin-bottom: 15rpx;
}
.uni-time-item text:first-child {
	margin-top: 15rpx;
}
.active {
	border-bottom: 2rpx solid #fbb42b;
	color: #fbb42b;
}
.uni-but-item {
	position: fixed;
	bottom: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.uni-but-item view {
	width: 375rpx;
	text-align: center;
	line-height: 107rpx;
	font-size: 32rpx;
	color: #FFFFFF;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.uni-but-item uni-icon {
	margin-right: 10rpx;
	background: url(http://lx97.cn/static/x1.png) no-repeat center;
	background-size: 43rpx 41rpx;
	width: 43rpx;
	height: 41rpx;
	display: inline-block;
}
.uni-but-item text {
	margin-top: 5rpx;
}
