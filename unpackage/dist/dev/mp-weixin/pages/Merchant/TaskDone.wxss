/* 选项卡样式 */
.segmented-control {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	width: 100%;
	font-size: 30rpx;
	border-radius: 10rpx;
	box-sizing: border-box;
	margin: 0 auto;
	overflow: hidden;
	letter-spacing: 2rpx;
	padding: 25rpx 0;
	background: #FFFFFF;
}
.segmented-control view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
	line-height: 60rpx;
	box-sizing: border-box;
	position: relative;
}
.segmented-control view text {
	display: inline-block;
	width: 100%;
	height: 100%;
}
.segmented-control view:after {
	content: "";
	width: 2rpx;
	height: 22rpx;
	position: absolute;
	top: 20rpx;
	right: 1rpx;
	background: #b6b6b6;
}
.segmented-control view:last-child:after {
	content: "";
	width: 0rpx;
}

