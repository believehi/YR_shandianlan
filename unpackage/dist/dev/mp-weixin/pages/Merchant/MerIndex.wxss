
.uni-top-nav {
	height: 315rpx;
	width: 100%;
}
.uni-user-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 30rpx 50rpx 0 50rpx;
}
.uni-user-info image {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.uni-user-info text {
	color: #000000;
	font-size: 29rpx;
	letter-spacing: 1rpx;
	margin-left: 15rpx;
}
button {
	padding: 0;
}
.uni-tyb {
	text-align: center;
	font-size: 50rpx;
	color: #FFFFFF;
	width: 100%;
	display: inline-block;
	font-weight: bold;
	margin: 15rpx 0;
}
.uni-cz-but {
	width: 115rpx;
	height: 52rpx;
	background-color: #2FB6A7;
	border-radius: 26rpx;
	color: #FFFFFF;
	font-size: 28rpx;
	line-height: 48rpx;
	margin-top: 30rpx;
}
.uni-but-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	margin-top: 80rpx;
}
.uni-but-item {
	width: 160rpx;
	height: 160rpx;
	background-color: #2FB6A7;
	border-radius: 50%;
	text-align: center;
}
.uni-but-item uni-icon {
	text-align: center;
	margin-top: 57rpx;
}
.uni-fb-but {
	font-size: 30rpx;
	color: #010101;
	text-align: center;
}
.uni-fb-but text {
	line-height: 80rpx;
}
.uni-fb-but:first-child {
	margin-right: 150rpx;
}
.uni-rw-list {
	padding: 0 25rpx;
}
.uni-rw-list {
	margin-top: 80rpx;
}
.uni-rw-item {
	width: 640rpx;
	height: 100rpx;
	background-color: #ffffff;
	box-shadow: 0px 0px 25rpx 0rpx rgba(0, 0, 0, 0.06);
	border-radius: 20rpx;
	margin-bottom: 35rpx;
	font-size: 32rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 25rpx 0 35rpx;
	color: #000000;
}
.message{
	width: 45rpx;
	height: 45rpx;
	margin-left:  395rpx;
	font-size: 20rpx;
	color: #FFFFFF;
	line-height: 46rpx;
	text-align: center;
	background-color: #2FB6A7;
	border-radius: 50%;
}
.nui-nav-bot {
	position: fixed;
	bottom: 0;
	width: 750rpx;
	height: 100rpx;
	background-color: #ffffff;
	box-shadow: 11rpx 17rpx 38rpx 0rpx rgba(0, 0, 0, 0.66);
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.nui-nav-item {
	width: 45rpx;
	font-size: 20rpx;
	text-align: center;
}
.nui-nav-item image {
	width: 45rpx;
	height: 40rpx;
}
.nui-nav-item:nth-child(1) {
	margin-left: 50rpx;
}
.nui-nav-item:nth-child(3) {
	margin-right: 50rpx;
}
.nui-nav-item:nth-child(2) image {
	width: 40rpx;
	height: 40rpx;
}

