@import "../../common/vendor.wxss";

.content {
  background: #f5f5f5;
}
.segmented-control {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  font-size: 30rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin: 0 auto;
  overflow: hidden;
  letter-spacing: 2rpx;
  padding: 25rpx 0;
}
.segmented-control.button {
  border: 2rpx soli;
}
.segmented-control.text {
  border: 0;
  border-radius: 0rpx;
}
.segmented-control-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
  position: relative;
}
.segmented-control-item.button:after {
  content: "";
  width: 1rpx;
  height: 22rpx;
  position: absolute;
  top: 20rpx;
  right: 0%;
  background: #b6b6b6;
}
.segmented-control-item.text {
  border-left: 0;
}
.segmented-control-item:first-child {
  border-left-width: 0;
}
.uni-rw-cont:first-child {
  margin-top: 15rpx;
}