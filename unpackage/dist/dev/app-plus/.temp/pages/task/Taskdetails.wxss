@import "../../common/vendor.wxss";

view {
  line-height: 35rpx;
}
.content {
  padding-top: 15rpx;
  padding-bottom: 107rpx;
}
.uni-rw-time {
  background-color: #FFFFFF;
  padding: 0 25rpx;
  width: 700rpx;
  margin-top: 15rpx;
}
.uni-rw-time .uni-rw-title {
  text-align: center;
  font-size: 32rpx;
  color: #0b0b0b;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.uni-rw-ms {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  padding: 25rpx 0;
}
.uni-rw-ms .uni-rw-sm {
  width: 154rpx;
  color: #212121;
}
.uni-rw-ms .uni-rw-m {
  -webkit-box-flex: 2;
  -webkit-flex-grow: 2;
  flex-grow: 2;
  width: 565rpx;
  text-align: justify;
  color: #616161;
}
.uni-rw-yq {
  color: #f3571a;
}
.uni-rw-yq text:first-child {
  margin-right: 40rpx;
}
.uni-sj-wz {
  border-bottom: 1rpx solid #e6e6e6;
}
.uni-rw-m image {
  width: 267rpx;
  height: 178rpx;
  margin-top: 10rpx;
}
.uni-rw-m image:first-child {
  margin-right: 15rpx;
}
.uni-cz-bz text:first-child {
  margin-top: 25rpx;
}
.uni-cz-bz text {
  font-size: 30rpx;
  color: #616161;
  display: inline-block;
  margin-bottom: 25rpx;
}
.uni-time-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.uni-time-item {
  font-size: 30rpx;
  color: #212121;
  width: 105rpx;
  text-align: center;
}
.uni-time-item text {
  display: inline-block;
  width: 100%;
  margin-bottom: 15rpx;
}
.uni-time-item text:first-child {
  margin-top: 15rpx;
}
.active {
  border-bottom: 2rpx solid #fbb42b;
  color: #fbb42b;
}
.uni-but-item {
  position: fixed;
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.uni-but-item view {
  width: 375rpx;
  text-align: center;
  line-height: 107rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
.uni-but-item .uni-sc-but {
  background-color: #d1d1d1;
}
.uni-but-item .uni-lqs-but {
  background-color: #fbb42b;
}