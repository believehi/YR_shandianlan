@import "../../common/vendor.wxss";

.un-video-box {
  padding-top: 27rpx;
}
.un-video-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.un-video-item {
  margin-bottom: 40rpx;
}
.un-video-item image {
  width: 329rpx;
  height: 183rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-right: 30rpx;
}
.un-video-item view text {
  font-size: 28rpx;
  color: #3e3e3e;
}
.un-video-item view {
  line-height: 32rpx;
}
.un-video-list .un-video-item:nth-child(2) {
  margin-right: 0;
}