@import "../../common/vendor.wxss";

.content {
  padding-top: 15rpx;
  height: 1200rpx;
}
.uni-hd-content {
  padding-top: 137rpx;
}
.uni-but-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
  align-items: flex-end;
  padding: 45rpx 0;
}
.uni-but-list .uni-but {
  width: 33.33%;
  text-align: center;
}
.uni-but-list .uni-but view {
  margin-top: -16rpx;
}
.uni-but-list .uni-but view text {
  color: #111a35;
  line-height: 0rpx;
  font-size: 24rpx;
}
.uni-hd-img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.uni-hd-img image {
  width: 337rpx;
  height: 186rpx;
  box-shadow: 0px 0px 25px 0px rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
}
.uni-hd-img image:nth-child(1) {
  margin-right: 25rpx;
}