@import "../../common/vendor.wxss";

.content {
  background: #f5f5f5;
}
.uni-rw-cont {
  position: relative;
}
.uni-rw-cont:first-child {
  margin-top: 15rpx;
}
.uni-rw-text .Text_Nowrap {
  padding-bottom: 5rpx;
}
.uni-rw-time {
  text-align: center;
}
.uni-rw-time view {
  font-size: 26rpx;
}
.uni-rw-time text {
  font-size: 26rpx;
  color: #ff533c;
}
.uni-rw-text .Text_Nowrap {
  width: 380rpx;
  display: inline-block;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
  align-items: flex-end;
}
.uni-rw-text:after {
  content: "";
  width: 1rpx;
  height: 70rpx;
  position: absolute;
  top: 44rpx;
  right: 168rpx;
  background: #e6e6e6;
}