@import "../../common/vendor.wxss";

.uni-login-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin-top: 140rpx;
}
.uni-login-content .uni-form-item {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1rpx solid #bfbfbf;
  padding: 15rpx 0;
  margin-bottom: 50rpx;
}
.uni-login-content .uni-form-item ._input {
  width: 540rpx;
  font-size: 32rpx;
  margin-left: 39rpx;
}
.uni-login-but {
  padding: 55rpx 0 50rpx 0;
}
.uni-login-but ._button {
  width: 610rpx;
  border-radius: 38rpx;
  background-color: #ffca2f;
  color: #050505;
  font-size: 34rpx;
  letter-spacing: 2rpx;
}
.uni-login-list,
.uni-wx-tit,
.uni-wx-but {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  border: none !important;
}
.uni-kj {
  width: 580rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  color: #3c3c3c;
  font-size: 30rpx;
}
.uni-wx-tit {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding-top: 340rpx;
}
.uni-wx-tit .uni-wx-item {
  border-bottom: 1rpx solid #c0c0c0;
  width: 210rpx;
}
.uni-wx-tit text {
  color: #c0c0c0;
  font-size: 30rpx;
  padding: 0 40rpx;
}
.uni-wx-but {
  padding: 40rpx 0;
}
.button-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}