@import "../../common/vendor.wxss";

.uni-tx-sum {
  font-size: 32rpx;
  color: #1a1a1a;
  padding: 0 40rpx 0 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  background: #ebebeb;
  height: 90rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.uni-tx-sum .tx-sum {
  color: #fb8d44;
  -webkit-box-flex: 2;
  -webkit-flex-grow: 2;
  flex-grow: 2;
}
.uni-tx-sum .uni-tx-gz {
  text-align: right;
  color: #a7a7a7;
}
.uni-user-content {
  font-size: 32rpx;
  color: #A7A7A7;
  margin-left: 36rpx;
  padding: 40rpx 0;
}
.uni-user-content text:last-child {
  margin-left: 32rpx;
}
.uni-tx-but {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 25rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.uni-tx-but ._input {
  font-size: 28rpx;
  color: #1a1a1a;
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 15rpx;
  border: 1px solid #fbb42d;
  background: white;
  margin-bottom: 22rpx;
  text-align: center;
  display: inline-block;
  margin-right: 18rpx;
}
.uni-tx-but ._input:nth-child(3),
.uni-tx-but ._input:nth-child(6),
.uni-tx-but ._input:nth-child(9) {
  margin-right: 0;
}
.button-hover {
  background-color: rgba(55, 44, 144, 0.1);
  opacity: 0.7;
}
.uni-tx-but ._button {
  background: #fbb42b;
  border-radius: 20rpx;
  color: #ffffff;
  font-size: 38rpx;
  margin-top: 170rpx;
}